<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">





    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="9dp"
        app:cardBackgroundColor="#E4E3E3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/l1">
        <RelativeLayout
            android:id="@+id/f1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
       <TextView

           android:id="@+id/categorytag"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Name of category"
           android:textSize="25dp"
           android:textColor="#000"
           android:layout_marginLeft="12dp"
           android:layout_marginTop="19dp"
           android:fontFamily="@font/faxfontfineregular">

       </TextView>
            <TextView
                android:id="@+id/namework"
                android:layout_below="@id/categorytag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of Worker"
                android:textSize="25dp"
                android:layout_marginLeft="12dp"
                android:textColor="#000"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/faxfontfineregular">

            </TextView>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/f2"
            android:layout_below="@+id/f1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="right">


            <TextView
                android:id="@+id/pricetag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="25dp"
                android:textColor="#000"
                android:layout_marginTop="19dp"
                android:layout_marginRight="12dp"
                android:fontFamily="@font/faxfontfineregular">

            </TextView>

            <TextView
                android:id="@+id/tduration"
                android:layout_below="@id/pricetag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time duration"
                android:textSize="19dp"
                android:textColor="#000"
                android:layout_marginTop="25dp"
                android:layout_marginRight="12dp"
                android:fontFamily="@font/faxfontfineregular">

            </TextView>

        </RelativeLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/datetime"
                android:layout_below="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="date and time"
                android:textSize="19dp"
                android:textColor="#000"
                android:fontFamily="@font/faxfontfineregular"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:textStyle="bold">

            </TextView>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>




</RelativeLayout>